{
  "extends": "@mono/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "verbatimModuleSyntax": true,
    "paths": {
      "@mono/domain/*": ["../../domain/src/*"],
      "@mono/features/*": ["*"]
    }
  },
  "include": ["src"]
}